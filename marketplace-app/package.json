{
  "name": "marketplace-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "// ---------- Build App ----------": "",
    "build:auth": "nest build auth",
    "build:gateway": "nest build gateway",
    "build:user": "nest build user",
    "build:all": "npm run clean && concurrently \"npm run build:auth\" \"npm run build:gateway\" \"npm run build:user\"",
    "// ---------- Single App Dev ----------": "",
    "start": "nest start gateway",
    "start:dev": "nest start gateway --watch",
    "start:dev:auth": "nest start auth --watch",
    "start:dev:gateway": "nest start gateway --watch",
    "start:dev:user": "nest start user --watch",
    "// ---------- Single App Prod ----------": "",
    "start:prod:auth": "node dist/apps/auth/main",
    "start:prod:gateway": "node dist/apps/gateway/main",
    "start:prod:user": "node dist/apps/user/main",
    "// ---------- Multi App ----------": "",
    "start:all": "concurrently \"npm run start:dev:auth\" \"npm run start:dev:gateway\" \"npm run start:dev:user\"",
    "start:prod": "concurrently \"npm run start:prod:auth\" \"npm run start:prod:gateway\" \"npm run start:prod:user\"",
    "// ---------- Others ----------": "",
    "start:debug": "nest start gateway --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/marketplace-app/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/platform-express": "^11.0.1",
    "mongoose": "^8.18.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
